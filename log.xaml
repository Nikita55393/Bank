                <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,181,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="22"/>
                <Label Content="Авторизация" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="24"/>
            </Grid>
        </Border>

    </Grid>
</Window>
